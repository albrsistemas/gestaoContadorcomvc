@model gestaoContadorcomvc.Areas.Contabilidade.Models.PlanoCategorias
@{
    Layout = null;
}
<div class="container">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Exclusão plano de categorias</h4>
            </div>
            <form asp-area="Contabilidade" asp-controller="PlanoCategorias" asp-action="Delete">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <p>Confirma a exclusão do plano de contas: <strong>@Model.pc_nome</strong></p>
                        </div>
                    </div>
                    <input type="hidden" asp-for="pc_id" />                    
                    <input type="hidden" asp-for="pc_nome" />                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>