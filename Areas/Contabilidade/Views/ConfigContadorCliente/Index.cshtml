@model gestaoContadorcomvc.Areas.Contabilidade.Models.ViewModel.vm_ConfigContadorCliente
@{
    ViewData["Title"] = "Configutações";
    Layout = "~/Areas/Contabilidade/Views/Shared/_Layout.cshtml";
}

<h2>Configurações</h2>
@{
    if (TempData["Cliente"] != null)
    {
        <h5>@TempData["Cliente"].ToString()</h5>
    }
}
<hr class="hrLine" />

@{
    if (TempData["Cliente"] != null && TempData["Cliente"].ToString() != "Nenhum cliente selecionado!")
    {
        <form asp-area="Contabilidade" asp-controller="ContaContabil" asp-action="Create">
            <fieldset>
                <legend>Plano de Contas</legend>
                <div class="form-group">
                    <label for="SelectClient" class="control-label"></label>
                    <select asp-items="@ViewBag.empresasContador" value="@TempData["empresasContador"]" id="SelectClient" name="cliente_id" class="form-control js_example_basic_single" style="width: 100%;"></select>
                </div>
            </fieldset>
            <fieldset>
                <legend>Restrições</legend>

            </fieldset>
        </form>
    }
}