@model gestaoContadorcomvc.Areas.Contabilidade.Models.ViewModel.vm_balancete
@{
    ViewData["Title"] = "Balancete";
    Layout = "~/Areas/Contabilidade/Views/Shared/_Layout.cshtml";
}

<style>
    .col-list-rigth {
        width: 90px;
        text-align: right;
    }

    .check-list-label {
        display: none;
    }

    .col-list-body {
        width: calc(100%);
    }

    a {
        cursor: pointer;
    }

    .line-list {
        border: 0px;
        font-family: sans-serif;
        font-size: 12px;
    }

    .vlr {
        text-align: right;
    }
</style>

<h2>Balancete Contábil</h2>
@{
    if (Model.balancete != null)
    {
        <h6>Data Inicial: @Model.data_inicial.ToString("d") - Data Final: @Model.data_final.ToString("d")</h6>
    }
}
<div class="btn-tools">
    <div class="row">
        <div class="col-10" style="text-align:left">

        </div>
        <div class="col-2" style="text-align:right">
            <a onClick="window.print()">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-printer" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path d="M11 2H5a1 1 0 0 0-1 1v2H3V3a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v2h-1V3a1 1 0 0 0-1-1zm3 4H2a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h1v1H2a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-1v-1h1a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1z" />
                    <path fill-rule="evenodd" d="M11 9H5a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1zM5 8a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H5z" />
                    <path d="M3 7.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z" />
                </svg>
            </a>
        </div>
    </div>
</div>
<hr class="hrLine" />

@{
    {
        if (TempData["balancete"] != null && TempData["balancete"].ToString().Contains("sucesso"))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert" id="Esconder">
                <strong>Sucesso!</strong> @TempData["balancete"].ToString()
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        if (TempData["balancete"] != null && TempData["balancete"].ToString().Contains("Erro"))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert" id="Esconder">
                <strong>Erro!</strong> @TempData["balancete"].ToString()
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    }
}

@{
    if (Model.balancete == null)
    {
        //Exibe o formulário
        if (Model.vm_config.ccc_planoContasVigente != "0")
        {
            <form asp-area="Contabilidade" asp-controller="Balancete" asp-action="Create">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="data_inicial" class="control-label"></label>
                            <input type="text" asp-for="data_inicial" autocomplete="off" id="data_inicial" class="form-control datepicker" value="" onclick="startDate(this.id)" onchange="gerarDataFinal(this.value)" />
                            <span asp-validation-for="data_inicial" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="data_final" class="control-label"></label>
                            <input type="text" asp-for="data_final" autocomplete="off" id="data_final" class="form-control datepicker" value="" />
                            <span asp-validation-for="data_final" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-info">Gerar</button>
            </form>
        }
        else
        {
            <p>Cliente não possui um plano de contas cadastrado!</p>
        }
    }
    else
    {
        //Exibe o resultado do formulário
        <div class="list-header">
            <div class="line-list">
                <div class="col-list-left">
                    <input class="check-list-input" type="checkbox" id="cp_todas">
                    <label class="check-list-label" for="cp_todas"></label>
                </div>
                <div class="col-list-body">
                    <div class="row">
                        <div class="col-12 col-md-2"><strong>Classificação</strong></div>
                        <div class="col-12 col-md-6"><strong>Descrição</strong></div>
                        <div class="col-12 col-md-1 vlr"><strong>Saldo Inicial</strong></div>
                        <div class="col-12 col-md-1 vlr"><strong>Débito</strong></div>
                        <div class="col-12 col-md-1 vlr"><strong>Crédito</strong></div>
                        <div class="col-12 col-md-1 vlr"><strong>Saldo Final</strong></div>
                    </div>
                </div>
            </div>
        </div>

        foreach (var item in Model.balancete)
        {
            <div class="line-list">
                <div class="col-list-left">
                    <input class="check-list-input" type="checkbox" id="cp_todas">
                    <label class="check-list-label" for="cp_todas"></label>
                </div>
                <div class="col-list-body">
                    <div class="row">
                        <div class="col-12 line_list_title_mobile"><strong>Classif.: </strong>@item.classificacao</div>
                        <div class="col-12 line_list_title_mobile"><strong>Desc.: </strong>@item.descricao</div>
                        <div class="col-12 line_list_title_mobile"><strong>Saldo Inicial: </strong>@item.saldo_inicial.ToString("N")</div>
                        <div class="col-12 line_list_title_mobile"><strong>Débito: </strong>@item.debito.ToString("N")</div>
                        <div class="col-12 line_list_title_mobile"><strong>Crédito: </strong>@item.credito.ToString("N")</div>
                        <div class="col-12 line_list_title_mobile"><strong>Saldo Final: </strong>@item.saldo_final.ToString("N")</div>

                        <div class="col-2 line_list_title_full">@item.classificacao</div>
                        <div class="col-6 line_list_title_full">@item.descricao</div>
                        <div class="col-1 line_list_title_full vlr">@item.saldo_inicial.ToString("N")</div>
                        <div class="col-1 line_list_title_full vlr">@item.debito.ToString("N")</div>
                        <div class="col-1 line_list_title_full vlr">@item.credito.ToString("N")</div>
                        <div class="col-1 line_list_title_full vlr">@item.saldo_final.ToString("N")</div>
                    </div>
                </div>
            </div>
        }
    }
}