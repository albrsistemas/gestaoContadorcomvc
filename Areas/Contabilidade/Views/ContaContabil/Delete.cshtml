@model gestaoContadorcomvc.Areas.Contabilidade.Models.ViewModel.vm_ContaContabil
@{
    Layout = null;
}

@{
    var plano = (gestaoContadorcomvc.Areas.Contabilidade.Models.PlanoContas)TempData["plano"];

    <div class="container">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Exclusão de Conta Contábil</h4>
                </div>
                <form asp-area="Contabilidade" asp-controller="ContaContabil" asp-action="Delete">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-12">
                                <p>Confirma a exclusão da conta contábil: <strong>@Model.ccontabil_nome</strong></p>
                            </div>
                        </div>
                        <input type="hidden" value="@plano.plano_id" name="plano_id" />
                        <input type="hidden" asp-for="ccontabil_id" />
                        <input type="hidden" asp-for="ccontabil_nome" />                        
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger">Excluir</button>
                    </div>
                </form>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>
}

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>