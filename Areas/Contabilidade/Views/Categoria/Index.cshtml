@model IEnumerable<gestaoContadorcomvc.Areas.Contabilidade.Models.ViewModel.vm_ContaContabil>
@{
    ViewData["Title"] = "Contas Contabeis";
    Layout = "~/Areas/Contabilidade/Views/Shared/_Layout.cshtml";
}
<style>
    .col-list-rigth {
        width: 90px;
        text-align: right;
    }

    .check-list-label {
        display: none;
    }

    .col-list-body {
        width: calc(100% - 90px);
    }

    a {
        cursor: pointer;
    }

    .line-list {
        border: 0px;
    }

    .nivel_2 {
        padding-left: 20px;
    }

    .nivel_3 {
        padding-left: 25px;
    }

    .nivel_4 {
        padding-left: 30px;
    }

    .nivel_5 {
        padding-left: 35px;
    }
</style>

@{
    if (TempData["retornoContasContabeis"] != null && TempData["retornoContasContabeis"].ToString().Contains("sucesso"))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" id="Esconder">
            <strong>Sucesso!</strong> @TempData["retornoContasContabeis"].ToString()
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    if (TempData["retornoContasContabeis"] != null && TempData["retornoContasContabeis"].ToString().Contains("Erro"))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert" id="Esconder">
            <strong>Erro!</strong> @TempData["retornoContasContabeis"].ToString()
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
}

@{
    var user = (gestaoContadorcomvc.Models.Autenticacao.Usuario)TempData["user"];
    var plano = (gestaoContadorcomvc.Areas.Contabilidade.Models.PlanoContas)TempData["plano"];

    <h2>Contas Contábeis</h2>
    <h4>@plano.plano_nome</h4>
    <hr class="hrLine" />

    if (user.Role.ToUpper().Equals("ADM") || user.permissoes.Contains("planoContasCreate"))
    {
        <a class="btn btn-info create" data-id="@plano.plano_id" style="margin-bottom:15px; color: white;">Nova Conta</a>
    }

    <a class="btn btn-info" asp-area="Contabilidade" asp-controller="PlanoContas" asp-action="Index" style="margin-bottom:15px;">Voltar</a>

    //Cabeçalho
    <div class="line-list">
        <div class="col-list-left">
            <input class="check-list-input" type="checkbox" id="cp_todas">
            <label class="check-list-label" for="cp_todas"></label>
        </div>
        <div class="col-list-body">
            <div class="row">
                <div class="col-12 col-md-2"><strong>Classificação</strong></div>
                <div class="col-12 col-md-7"><strong>Descrição</strong></div>
                <div class="col-12 col-md-3"><strong>Apelido</strong></div>
            </div>
        </div>
        <div class="col-list-rigth" style="padding-right: 10px;">
            <span><strong>Ações</strong></span>
        </div>
    </div>

    foreach (var item in Model)
    {
        <div class="line-list">
            <div class="col-list-left">
                <input class="check-list-input" type="checkbox" id="cp_todas">
                <label class="check-list-label" for="cp_todas"></label>
            </div>
            <div class="col-list-body">
                <div class="row">
                    <div class="col-12 col-md-2">@item.ccontabil_classificacao</div>
                    <div class="col-12 col-md-7 nivel_@item.ccontabil_nivel">@item.ccontabil_nome</div>
                    <div class="col-12 col-md-3">@item.ccontabil_apelido</div>
                </div>
            </div>
            <div class="col-list-rigth" style="padding-right: 10px;">
                @{
                    if (user.Role.ToUpper().Equals("ADM") || user.permissoes.Contains("planoContasEdit"))
                    {
                        <a class="editContaContabil" data-ccontabil_id="@item.ccontabil_id" data-plano_id="@plano.plano_id">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5L13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175l-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                            </svg>
                        </a>
                    }
                    if (user.Role.ToUpper().Equals("ADM") || user.permissoes.Contains("planoContasDelete"))
                    {
                        <a class="deleteContaContabil" data-ccontabil_id="@item.ccontabil_id" data-plano_id="@plano.plano_id">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                            </svg>
                        </a>
                    }
                }
            </div>
        </div>
    }
}