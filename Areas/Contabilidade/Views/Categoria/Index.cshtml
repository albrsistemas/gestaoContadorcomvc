@{
    if (TempData["Cliente"] != null && TempData["Cliente"].ToString() != "Nenhum cliente selecionado!")
    {
 <!--Cabeçalho-->
    <div class="list-header">
        <div class="line-list">
            <div class="col-list-left">
                <input class="check-list-input" type="checkbox" id="cp_todas">
                <label class="check-list-label" for="cp_todas"></label>
            </div>
            <div class="col-list-body">
                <div class="row">
                    <div class="col-12 col-md-2"><strong>Classificação</strong></div>
                    <div class="col-12 col-md-6"><strong>Descrição</strong></div>
                    <div class="col-12 col-md-2" style="text-align:center"><strong>Conta Contábil</strong></div>
                    <div class="col-12 col-md-2" style="text-align:center">
                        @{
                                if (TempData["planoCliente"] != null)
                                {
                            <strong>Conta on line</strong>
                                }
                        }
                    </div>
                </div>
            </div>
            <div class="col-list-rigth" style="padding-right: 10px;">
                <span><strong>Ações</strong></span>
            </div>
        </div>
    </div>

        foreach (var item in Model.categorias)
        {
    <div class="line-list">
        <div class="col-list-left">
            <input class="check-list-input" type="checkbox" id="cp_todas">
            <label class="check-list-label" for="cp_todas"></label>
        </div>
        <div class="col-list-body">
            <div class="row">
                <div class="col-12 col-md-2">                    
                    <span>@item.categoria_classificacao</span>
                </div>
                <div class="col-12 col-md-6">
                    @{
                                if (item.categoria_classificacao.Length == 1)
                                {
                        <span><strong>@item.categoria_nome.ToUpper()</strong></span>
                                }
                                if (item.categoria_classificacao.Length == 4)
                                {
                        <span><strong>@item.categoria_nome</strong></span>
                                }
                                if (item.categoria_classificacao.Length > 4)
                                {
                        <span>@item.categoria_nome</span>
                                }
                    }
                </div>
                <div class="col-12 col-md-2" style="text-align:center">
                    @{
                                if (item.categoria_classificacao.Length > 4)
                                {
                        <span>@item.categoria_conta_contabil</span>
                                }
                    }
                </div>
                <div class="col-12 col-md-2" style="text-align:center">
                    @{
                        if (item.categoria_classificacao.Length > 3)
                        {
                            if (Model.user.Role == "adm" || Model.user._permissoes.clienteCategoriasCreate)
                            {
                                if ((item.categoria_contaonline == null || item.categoria_contaonline == "") && TempData["planoCliente_id"] != null && TempData["planoCliente_id"].ToString() != "0")
                                {
                                    <a class="createCategoria_contaonline" data-plano_id="@TempData["planoCliente_id"].ToString()" data-categoria_id="@item.categoria_id">
                                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-link-45deg" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M4.715 6.542L3.343 7.914a3 3 0 1 0 4.243 4.243l1.828-1.829A3 3 0 0 0 8.586 5.5L8 6.086a1.001 1.001 0 0 0-.154.199 2 2 0 0 1 .861 3.337L6.88 11.45a2 2 0 1 1-2.83-2.83l.793-.792a4.018 4.018 0 0 1-.128-1.287z" />
