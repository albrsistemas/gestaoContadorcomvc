@model IEnumerable<gestaoContadorcomvc.Models.ViewModel.Vm_categoria>

@using Microsoft.AspNetCore.Http

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Categorías";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    svg {
        color: #ff4400;
    }

    .col-list-left label {
        display: none;
    }
    .line-list{
        margin-left: 10px;
    }
    .plus{
        cursor: pointer;
        float: right;        
    }
    fieldset{
        margin-bottom: 10px;
    }
</style>

<h2>Gestão de categorias</h2>
<hr class="hrLine" />

