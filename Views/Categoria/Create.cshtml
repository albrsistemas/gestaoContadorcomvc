@model gestaoContadorcomvc.Models.ViewModel.Vm_categoria
@{
    Layout = null;
}
<div class="container">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Nova Categoria</h4>
            </div>
            <form asp-controller="Categoria" asp-action="Create" id="form">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <p>Cadastro de nova categoria de: <strong>@(TempData["escopo"] != null ? @TempData["escopo"] : "")</strong></p>
                        </div>
                    </div>
                    <hr class="hrLine" />
                    @{
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label class="control-label">Grupo</label>
                                    <input id="inputGrupo" readonly="readonly" class="form-control" value='@(TempData["grupoCategoria"] != null ? @TempData["grupoCategoria"] : "")' />
                                    <span id="spanGrupo" class="text-danger"></span>
                                </div>                                                    
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label class="control-label">Sequência</label>
                                    <input asp-for="categoria_sequencia" class="form-control" onblur="montaClassificacao(this.value, '@(TempData["grupoCategoria"] != null ? @TempData["grupoCategoria"] : "")')" />
                                    <span asp-validation-for="categoria_sequencia" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="categoria_classificacao" class="control-label"></label>
                                    <input asp-for="categoria_classificacao" class="form-control" readonly="readonly" />
                                    <span asp-validation-for="categoria_classificacao" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="categoria_nome" class="control-label"></label>
                                    <input asp-for="categoria_nome" class="form-control" />
                                    <span asp-validation-for="categoria_nome" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="categoria_conta_contabil" class="control-label"></label>
                                    <input asp-for="categoria_conta_contabil" class="form-control" />
                                    <span asp-validation-for="categoria_conta_contabil" class="text-danger"></span>
                                </div>
                                <input type="hidden" name="escopo" value='@(TempData["escopo"] != null ? @TempData["escopo"] : "")' />
                            </div>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-info" id="sub_form" onclick="blockSubmit(this.id,'form')">Gravar</button>
                    <br /><span class="text-info" id="msg_blockSubmit"></span>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
