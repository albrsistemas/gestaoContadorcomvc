@model gestaoContadorcomvc.Models.ViewModel.Vm_fluxo_caixa

@{
    ViewData["Title"] = "Movimento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .col-list-rigth {
        width: 90px;
        text-align: right;
    }

    .check-list-label {
        display: none;
    }

    .col-list-body {
        width: calc(100% - 90px);
    }

    a {
        cursor: pointer;
    }

    .line-list {
        border: 0px;
    }

    .titulo {
        background-color: #d9d8d4;
    }

    legend {
        margin-top: 15px;
    }

    line_list_title_full {
        display: flex !important;
        align-items: center !important;
    }
</style>

@{
    if (TempData["msgCCM"] != null && TempData["msgCCM"].ToString().Contains("sucesso"))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" id="Esconder">
            <strong>Sucesso!</strong> @TempData["msgCCM"].ToString()
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    if (TempData["msgCCM"] != null && TempData["msgCCM"].ToString().Contains("Erro"))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert" id="Esconder">
            <strong>Erro!</strong> @TempData["msgCCM"].ToString()
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
}

<h2>Movimento de Conta Corrente</h2>
<hr class="hrLine" />


<form asp-controller="ContaCorrenteMov" asp-action="Index">
    <div class="row">
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label class="control-label">Conta Corrente</label>
                <select asp-items="@ViewBag.ccorrente" value="@TempData["contacorrente_id"]" id="contacorrente_id" name="contacorrente_id" class="form-control"></select>
            </div>
        </div>
        <div class="col-6 col-md-2">
            <div class="form-group">
                <label class="control-label">Data Inicial</label>
                <input name="dataInicio" class="form-control datepicker" value="@TempData["dataInicio"]" />
            </div>
        </div>
        <div class="col-6 col-md-2">
            <div class="form-group">
                <label class="control-label">Data Final</label>
                <input name="dataFim" class="form-control datepicker" value="@TempData["dataFim"]" />
            </div>
        </div>
        <div class="col-12 col-md-2" style="text-align:right">
            <button type="submit" class="btn btn-info btn_fc">Selecionar</button>
        </div>
    </div>
</form>

<div class="saldo_inicial">
    @{
        if (Model.saldo_abertura + Model.saldo_movimentos < 0)
        {
            <span>Saldo Inicial: <span style="color:red">@((Model.saldo_abertura + Model.saldo_movimentos).ToString("N"))</span></span>
        }
        else
        {
            <span>Saldo Inicial: <span style="color:black">@((Model.saldo_abertura + Model.saldo_movimentos).ToString("N"))</span></span>
        }
    }
</div>


<div class="list-header">
    <div class="line-list titulo">
        <div class="col-list-left">
            <input class="check-list-input" type="checkbox" id="cp_todas">
            <label class="check-list-label" for="cp_todas"></label>
        </div>
        <div class="col-list-body">
            <div class="row">
                <div class="col-12 col-md-3"><strong>Data</strong></div>
                <div class="col-12 col-md-5"><strong>Memorando</strong></div>
                <div class="col-12 col-md-2" style="text-align:right;"><strong>Valor</strong></div>
                <div class="col-12 col-md-2" style="text-align:right;"><strong>Saldo</strong></div>
            </div>
        </div>
        <div class="col-list-rigth" style="padding-right: 10px;">
            <span><strong>Ações</strong></span>
        </div>
    </div>
</div>
@{
    Decimal saldo_anterior = Model.saldo_abertura + Model.saldo_movimentos;

    int x = Model.fluxo.Count();

    if (x == 0)
    {
        if (TempData["msg"] != null)
        {
            <p>@TempData["msg"].ToString()</p>
        }
        else
        {
            <p>Selecione uma conta corrente e período para gerar fluxo de caixa!</p>
        }
    }
    else
    {
        foreach (var item in Model.fluxo)
        {
            <div class="line-list">
                <div class="col-list-left">
                    <input class="check-list-input" type="checkbox" id="cp_todas">
                    <label class="check-list-label" for="cp_todas"></label>
                </div>
                <div class="col-list-body">
                    <div class="row">
                        <div class="col-12 line_list_title_mobile"><strong>Data: </strong>@item.data.ToShortDateString()</div>
                        <div class="col-12 line_list_title_mobile"><strong>Memorando: </strong>@item.memorando</div>
                        @{
                            if (item.valor < 0)
                            {
                                <div class="col-12 line_list_title_mobile"><strong>Valor: </strong><span style="color:red;">@item.valor.ToString("N2")</span></div>
                            }
                            else
                            {
                                <div class="col-12 line_list_title_mobile"><strong>Valor: </strong><span style="color:black;">@item.valor.ToString("N2")</span></div>
                            }
                        }
                        @{
                            Decimal saldo_atual = saldo_anterior + item.valor;

                            if (saldo_atual < 0)
                            {
                                <div class="col-12 line_list_title_mobile"><strong>Saldo: </strong><span style="color:red;">@((saldo_anterior + item.valor).ToString("N2"))</span></div>
                            }
                            else
                            {
                                <div class="col-12 line_list_title_mobile"><strong>Saldo: </strong><span style="color:black;">@((saldo_anterior + item.valor).ToString("N2"))</span></div>
                            }
                        }

                        <div class="col-3 line_list_title_full">@item.data.ToShortDateString()</div>
                        <div class="col-5 line_list_title_full">@item.memorando</div>
                        @{
                            if (item.valor < 0)
                            {
                                <div class="col-2 line_list_title_full" style="text-align:right;color:red;">@item.valor.ToString("N2")</div>
                            }
                            else
                            {
                                <div class="col-2 line_list_title_full" style="text-align:right;color:black;">@item.valor.ToString("N2")</div>
                            }

                            if (saldo_atual < 0)
                            {
                                <div class="col-2 line_list_title_full" style="text-align:right;color:red;">@((saldo_anterior + item.valor).ToString("N2"))</div>
                            }
                            else
                            {
                                <div class="col-2 line_list_title_full" style="text-align:right;color:black;">@((saldo_anterior + item.valor).ToString("N2"))</div>
                            }
                        }
                        @{
                            saldo_anterior = saldo_atual;
                        }

                    </div>
                </div>
                <div class="col-list-rigth" style="padding-right: 10px;">
                    @{
                        if (item.contra_partida_tipo == "Participante") //Neste caso o movimento é uma baixa de operação
                        {
                            <a class="editBaixa" data-baixa_id="@item.baixa_id" data-local="ContaCorrente" data-contacorrente_id="@TempData["contacorrente_id"].ToString()" data-dataInicio="@TempData["dataInicio"].ToString()" data-dataFim="@TempData["dataFim"].ToString()">
                                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-eye" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.134 13.134 0 0 0 1.66 2.043C4.12 11.332 5.88 12.5 8 12.5c2.12 0 3.879-1.168 5.168-2.457A13.134 13.134 0 0 0 14.828 8a13.133 13.133 0 0 0-1.66-2.043C11.879 4.668 10.119 3.5 8 3.5c-2.12 0-3.879 1.168-5.168 2.457A13.133 13.133 0 0 0 1.172 8z" />
                                    <path fill-rule="evenodd" d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z" />
                                </svg>
                            </a>
                        }
                    }
                </div>
            </div>
        }
    }
}


