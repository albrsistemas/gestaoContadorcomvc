</form>
<div class="row">
    <div class="col-6"></div>
    @*<div class="col-6" onclick="filter_ccm()" style="cursor:pointer;user-select:none;">
        <div style="float:left;cursor:pointer;"><label id="icon_ccm" class="text-info" style="font-weight:bold;cursor:pointer;">+ Filtros</label></div>
    </div>*@
    <div class="col-6">
        <div class="saldo_inicial">
            @{
                if (Model.filtro == "Sem filtros!")
                {
                    if (Model.saldo_abertura + Model.saldo_movimentos < 0)
                    {
                        <span>Saldo Inicial: <span style="color:red">@((Model.saldo_abertura + Model.saldo_movimentos).ToString("N"))</span></span>
                    }
                    else
                    {
                        <span>Saldo Inicial: <span style="color:black">@((Model.saldo_abertura + Model.saldo_movimentos).ToString("N"))</span></span>
                    }
                }
            }
        </div>
    </div>
</div>
@{ 
    if(Model.filtro == "Informações com filtros!")
    {
        <p><label class="text-danger">As informações listadas estão com filtros e não foram gerados o saldo dos movimentos!</label></p>
    }
}

<div class="list-header">
    <div class="line-list titulo">
        <div class="col-list-left">
            <input class="check-list-input" type="checkbox" id="cp_todas">
            <label class="check-list-label" for="cp_todas"></label>
        </div>
        <div class="col-list-body">
            <div class="row">
                <div class="col-12 col-md-3"><strong>Data</strong></div>
                <div class="col-12 col-md-5"><strong>Memorando</strong></div>
                <div class="col-12 col-md-2" style="text-align:right;"><strong>Valor</strong></div>
                <div class="col-12 col-md-2" style="text-align:right;"><strong>Saldo</strong></div>
            </div>
        </div>
        <div class="col-list-rigth" style="padding-right: 10px;">
            <span><strong>Ações</strong></span>
        </div>
    </div>
</div>
@{
    Decimal saldo_anterior = Model.saldo_abertura + Model.saldo_movimentos;

    int x = Model.fluxo.Count();

    if (x == 0)
    {
        if (TempData["msg"] != null)
        {
            <p>@TempData["msg"].ToString()</p>
        }
        else
        {
            <p>Selecione uma conta corrente e período para gerar fluxo de caixa!</p>
        }
    }
    else
    {
        foreach (var item in Model.fluxo)
        {
            <div class="line-list">
                <div class="col-list-left">
                    <input class="check-list-input" type="checkbox" id="cp_todas">
                    <label class="check-list-label" for="cp_todas"></label>
                </div>
                <div class="col-list-body">
                    <div class="row">
                        <div class="col-12 line_list_title_mobile"><strong>Data: </strong>@item.data.ToShortDateString()</div>
                        <div class="col-12 line_list_title_mobile"><strong>Memorando: </strong>@item.memorando</div>
                        @{
                            if (item.valor < 0)
                            {
                                <div class="col-12 line_list_title_mobile"><strong>Valor: </strong><span style="color:red;">@item.valor.ToString("N2")</span></div>
                            }
                            else
                            {
                                <div class="col-12 line_list_title_mobile"><strong>Valor: </strong><span style="color:black;">@item.valor.ToString("N2")</span></div>
                            }
                        }
                        @{
                            Decimal saldo_atual = saldo_anterior + item.valor;

                            if (saldo_atual < 0)
                            {
                                <div class="col-12 line_list_title_mobile">
                                    <strong>Saldo: </strong><span style="color:red;">
                                    @{ 
                                        if(Model.filtro == "Sem filtros!")
                                        {
                                            @((saldo_anterior + item.valor).ToString("N2"))             
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    }                                    
                                </div>
                            }
                            else
                            {
                                <div class="col-12 line_list_title_mobile">
                                    <strong>Saldo: </strong><span style="color:black;">
                                    @{ 
                                        if(Model.filtro == "Sem filtros!")
                                        {
                                            @((saldo_anterior + item.valor).ToString("N2"))             
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    }
                                    </span>             
                                </div>
                            }
                        }

                        <div class="col-3 line_list_title_full">@item.data.ToShortDateString()</div>
                        <div class="col-5 line_list_title_full">@item.memorando</div>
                        @{
                            if (item.valor < 0)
                            {
                                <div class="col-2 line_list_title_full" style="text-align:right;color:red;">@item.valor.ToString("N2")</div>
                            }
                            else
                            {
                                <div class="col-2 line_list_title_full" style="text-align:right;color:black;">@item.valor.ToString("N2")</div>
                            }

                            if (saldo_atual < 0)
                            {
                                <div class="col-2 line_list_title_full" style="text-align:right;color:red;">
                                    @{ 
                                        if(Model.filtro == "Sem filtros!")
                                        {
                                            @((saldo_anterior + item.valor).ToString("N2"))             
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    }                                    
                                </div>
                            }
                            else
                            {
                                <div class="col-2 line_list_title_full" style="text-align:right;color:black;">
                                    @{ 
                                        if(Model.filtro == "Sem filtros!")
                                        {
                                            @((saldo_anterior + item.valor).ToString("N2"))             
                                        }
                                        else
                                        {
                                            <span>-</span>
                                        }
                                    }                                    
                                </div>
                            }
                        }
                        @{
                            saldo_anterior = saldo_atual;
                        }

                    </div>
                </div>
                <div class="col-list-rigth" style="padding-right: 10px;">
                    @{
                        if (Model.user.Role == "adm" || Model.user._permissoes.baixaEdit || Model.user._permissoes.baixaDelete)
                        {
                            if (item.contra_partida_tipo == "Participante" || item.contra_partida_tipo == "Cartão Crédito") //Neste caso o movimento é uma baixa de operação
                            {
                                <a class="editBaixa" data-baixa_id="@item.baixa_id" data-local="ContaCorrente" data-contacorrente_id="@TempData["contacorrente_id"].ToString()" data-dataInicio="@TempData["dataInicio"].ToString()" data-dataFim="@TempData["dataFim"].ToString()">
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-eyeglasses" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M4 6a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm2.625.547a3 3 0 0 0-5.584.953H.5a.5.5 0 0 0 0 1h.541A3 3 0 0 0 7 8a1 1 0 0 1 2 0 3 3 0 0 0 5.959.5h.541a.5.5 0 0 0 0-1h-.541a3 3 0 0 0-5.584-.953A1.993 1.993 0 0 0 8 6c-.532 0-1.016.208-1.375.547zM14 8a2 2 0 1 0-4 0 2 2 0 0 0 4 0z" />
                                    </svg>
                                </a>
                            }
                        }
                        if (Model.user.Role == "adm" || Model.user._permissoes.CCMEdit || Model.user._permissoes.CCMDelete)
                        {
                            if (item.contra_partida_tipo == "Transferencia") //Neste caso o movimento é uma transferência
                            {
                                <a class="editTransferencia" data-ccm_id="@item.id" data-local="ContaCorrente" data-contacorrente_id="@TempData["contacorrente_id"].ToString()" data-dataInicio="@TempData["dataInicio"].ToString()" data-dataFim="@TempData["dataFim"].ToString()">
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-eyeglasses" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M4 6a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm2.625.547a3 3 0 0 0-5.584.953H.5a.5.5 0 0 0 0 1h.541A3 3 0 0 0 7 8a1 1 0 0 1 2 0 3 3 0 0 0 5.959.5h.541a.5.5 0 0 0 0-1h-.541a3 3 0 0 0-5.584-.953A1.993 1.993 0 0 0 8 6c-.532 0-1.016.208-1.375.547zM14 8a2 2 0 1 0-4 0 2 2 0 0 0 4 0z" />
                                    </svg>
                                </a>
                            }
                        }
                    }
                </div>
            </div>
        }
    }
}


