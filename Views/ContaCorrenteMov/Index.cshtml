@model gestaoContadorcomvc.Models.ViewModel.Vm_conta_corrente_mov

@{
    ViewData["Title"] = "Movimento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .col-list-rigth {
        width: 90px;
        text-align: right;
    }

    .check-list-label {
        display: none;
    }

    .col-list-body {
        width: calc(100% - 90px);
    }

    a {
        cursor: pointer;
    }

    .line-list {
        border: 0px;
    }

    .titulo {
        background-color: #d9d8d4;
    }

    legend {
        margin-top: 15px;
    }
</style>

@{
    if (TempData["msgCCM"] != null && TempData["msgCCM"].ToString().Contains("sucesso"))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" id="Esconder">
            <strong>Sucesso!</strong> @TempData["msgCCM"].ToString()
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    if (TempData["msgCCM"] != null && TempData["msgCCM"].ToString().Contains("Erro"))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert" id="Esconder">
            <strong>Erro!</strong> @TempData["msgCCM"].ToString()
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
}

<h2>Movimento de Conta Corrente</h2>
<hr class="hrLine" />

<div class="row">
    <form asp-controller="ContaCorrenteMov" asp-action="Index">
        <div class="col-9">
            <div class="row">
                <div class="col-12 col-md-6">
                    <label class="control-label">Conta Corrente</label>
                    <select asp-items="@ViewBag.ccorrente" value="@TempData["contacorrente_id"]" id="contacorrente_id" name="contacorrente_id" class="form-control"></select>
                </div>
                <div class="col-6 col-md-3">
                    <label class="control-label">Data Inicial</label>
                    <input name="dataInicio" class="form-control datepicker" value="@TempData["dataInicio"]" />
                </div>
                <div class="col-6 col-md-3">
                    <label class="control-label">Data Final</label>
                    <input name="dataFim" class="form-control datepicker" value="@TempData["dataFim"]" />
                </div>
            </div>
        </div>
        <div class="col-3">
            <button type="submit" class="btn btn-info" id="sub">Selecionar</button>
        </div>
    </form>
</div>

<div class="list-header">
    <div class="line-list titulo">
        <div class="col-list-left">
            <input class="check-list-input" type="checkbox" id="cp_todas">
            <label class="check-list-label" for="cp_todas"></label>
        </div>
        <div class="col-list-body">
            <div class="row">
                <div class="col-12 col-md-2"><strong>Data</strong></div>
                <div class="col-12 col-md-2"><strong>Categoria</strong></div>
                <div class="col-12 col-md-2"><strong>Memorando</strong></div>
                <div class="col-12 col-md-2"><strong>Cliente/Fornecedor</strong></div>
                <div class="col-12 col-md-2" style="text-align:right;"><strong>Valor</strong></div>
                <div class="col-12 col-md-2" style="text-align:right;"><strong>Saldo</strong></div>
            </div>
        </div>
        <div class="col-list-rigth" style="padding-right: 10px;">
            <span><strong>Ações</strong></span>
        </div>
    </div>
</div>
@{
    foreach (var item in Model.conta_corrente_movimento)
    {
        <div class="line-list">
            <div class="col-list-left">
                <input class="check-list-input" type="checkbox" id="cp_todas">
                <label class="check-list-label" for="cp_todas"></label>
            </div>
            <div class="col-list-body">
                <div class="row">
                    <div class="col-12 line_list_title_mobile"><strong>Data: </strong>@item.data.ToShortDateString()</div>
                    <div class="col-12 line_list_title_mobile"><strong>Categoria: </strong>@item.categoria</div>
                    <div class="col-12 line_list_title_mobile"><strong>Memorando: </strong>@item.memorando</div>
                    <div class="col-12 line_list_title_mobile"><strong>Cliente/Fornecedor: </strong>@item.participante</div>
                    @{
                        if (item.valor < 0)
                        {
                            <div class="col-12 line_list_title_mobile"><strong>Valor: </strong><span style="color:red;">@item.valor.ToString("N2")</span></div>
                        }
                        else
                        {
                            <div class="col-12 line_list_title_mobile"><strong>Valor: </strong><span style="color:black;">@item.valor.ToString("N2")</span></div>
                        }
                    }
                    @{
                        if (item.saldo < 0)
                        {
                            <div class="col-12 line_list_title_mobile"><strong>Valor: </strong><span style="color:red;">@item.saldo.ToString("N2")</span></div>
                        }
                        else
                        {
                            <div class="col-12 line_list_title_mobile"><strong>Valor: </strong><span style="color:black;">@item.saldo.ToString("N2")</span></div>
                        }
                    }

                    <div class="col-2 line_list_title_full">@item.data.ToShortDateString()</div>
                    <div class="col-2 line_list_title_full">@item.categoria</div>
                    <div class="col-2 line_list_title_full">@item.memorando</div>
                    <div class="col-2 line_list_title_full">@item.participante</div>
                    <div class="col-2 line_list_title_full" style="text-align:right;">@item.valor.ToString("N2")</div>
                    <div class="col-2 line_list_title_full" style="text-align:right;">@item.saldo.ToString("N2")</div>                    
                </div>
            </div>
            <div class="col-list-rigth" style="padding-right: 10px;">                
                    
            </div>
        </div>
    }
}