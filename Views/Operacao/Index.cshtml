@model gestaoContadorcomvc.Models.ViewModel.Vm_operacao_index

@{
    ViewData["Title"] = "Operação";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .col-list-rigth {
        width: 90px;
        text-align: right;
    }

    .check-list-label {
        display: block;
    }

    .col-list-body {
        width: calc(100% - 90px);
    }

    a {
        cursor: pointer;
    }

    .line-list {
        border: 0px;
    }

    .titulo {
        background-color: #d9d8d4;
    }

    legend {
        margin-top: 15px;
    }

    .sidenav a {
        padding: 0px 0px 0px 0px;
        text-decoration: none;
        color: darkblue;
        font-size: 12px;
    }

        .sidenav a:hover {
            color: darkblue;
            background-color: #ffe699;
        }

    .check-list-label {
        display: none;
    }

    .container {
        min-width: 100%;
    }

    .table th {
        white-space: nowrap;
    }

    .table > tbody > tr > td {
        vertical-align: middle;
    }

    .table > tbody > tr > th {
        vertical-align: middle;
    }

    .table > tbody > tr:hover {
        background-color: #f5f4ba;
    }
</style>

@{
    if (TempData["msgOP"] != null && TempData["msgOP"].ToString().Contains("sucesso"))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" id="Esconder">
            <strong>Sucesso!</strong> @TempData["msgOP"].ToString()
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    if (TempData["msgOP"] != null && TempData["msgOP"].ToString().Contains("Erro"))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert" id="Esconder">
            <strong>Erro!</strong> @TempData["msgOP"].ToString()
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
}

<h2>Operação</h2>
<div class="btn-tools">
    <div class="row">
        <div class="coluna_1" style="text-align:left;width:calc(100% - 100px);user-select:none;padding-left: 15px;">
            @{
                if (Model.user.Role == "adm" || Model.user._permissoes.operacaoCreate)
                {
                    <a class="btn btn-sm btn-info" asp-controller="Operacao" asp-action="Create">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="white" class="bi bi-plus-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                        </svg>
                    </a>
                }
            }
            <a class="btn btn-sm btn-info" onClick="window.print()">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-printer" fill="white" xmlns="http://www.w3.org/2000/svg">
                    <path d="M11 2H5a1 1 0 0 0-1 1v2H3V3a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v2h-1V3a1 1 0 0 0-1-1zm3 4H2a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h1v1H2a2 2 0 0 1-2-2V7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-1v-1h1a1 1 0 0 0 1-1V7a1 1 0 0 0-1-1z" />
                    <path fill-rule="evenodd" d="M11 9H5a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1zM5 8a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H5z" />
                    <path d="M3 7.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z" />
                </svg>
            </a>
        </div>
        <div class="coluna_1" style="text-align:right;width: 100px;user-select:none;">
            <p id="somaParcela" style="font-weight:bold;padding-left: 20px;"></p>
        </div>
    </div>
</div>
<hr class="hrLine" />
<div class="table-responsive">
    <table class="table table-sm">
        <caption>Operações</caption>
        <thead>
            <tr>                
                <th scope="col">Tipo</th>
                <th scope="col">Data Operação</th>
                <th scope="col">Participante</th>
                <th scope="col">Categoria</th>
                <th scope="col">Memorando</th>
                <th scope="col">Documento</th>
                <th scope="col">Valor</th>
                <th scope="col" style="width:90px;">Ações</th>
            </tr>
        </thead>
        <tbody>
            @{ 
                foreach(var item in Model.lista)
                {
                    <tr>  
                        <td style="white-space:nowrap;">@item.tipo</td>
                        <td style="white-space:nowrap;">@item.data.ToShortDateString()</td>
                        <td style="white-space:nowrap;">@item.participante</td>
                        <td style="white-space:nowrap;">@item.categoria</td>
                        <td>@item.memorando</td>
                        <td style="white-space:nowrap;">@item.documento</td>
                        <td>@item.valor.ToString("N")</td>
                        <td>
                                @{
                                    if (Model.user.Role == "adm" || Model.user._permissoes.operacaoEdit)
                                    {
                                        <a class="edit" data-id="@item.id">
                                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil" fill="#ff4400" xmlns="http://www.w3.org/2000/svg">
                                                <path fill-rule="evenodd" d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5L13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175l-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                            </svg>
                                        </a>
                                    }
                                    if (Model.user.Role == "adm" || Model.user._permissoes.operacaoDelete)
                                    {
                                        <a class="delete" data-id="@item.id">
                                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="#ff4400" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                            </svg>
                                        </a>
                                    }
                                }
                            </td>
                    </tr>                        
                }
            }
        </tbody>
    </table>
</div>