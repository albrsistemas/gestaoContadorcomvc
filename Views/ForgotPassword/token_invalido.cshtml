@{
    ViewData["Title"] = "Token Inválido";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            margin: 0px;
            background-image: url('/Imagens/background.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
        }

        .container {
            width: 100vw;
            height: 100vh;
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center
        }

        .box {
            width: 500px;
            height: auto;
            background: #fff;
            text-align: center;
            padding-bottom: 5px;
        }

            .box input {
                text-align: center;
            }

                .box input:hover {
                    color: #495057;
                    background-color: #fff;
                    border-color: #80bdff;
                    outline: 0;
                    box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
                }

        .faixa {
            width: 100%;
            height: 35px;
            border-bottom: 3px solid #ff4400;
            background-color: #060040;
        }

        .login {
            text-align: center;
            font-family: sans-serif;
            font-weight: bold;
            font-size: 32px;
            margin-top: 35px;
            margin-bottom: 40px;
        }

        .botao {
            width: 100%;
            margin-top: 10px;
        }

        .criarConta {
            margin-top: 10px;
        }

        .radio-toolbar input[type="radio"] {
            display: none;
        }

        .radio-toolbar label {
            float: left;
            background-color: #17a2b8;
            color: white;
            width: 135px;
            height: 38px;
            line-height: 38px;
            font-family: sans-serif;
            cursor: pointer;
            user-select: none;
        }

        .radio-toolbar input[type="radio"]:checked + label {
            background-color: #138496;
        }

        #label1 {
            border-bottom-left-radius: 5px;
            border-top-left-radius: 5px;
        }

        #label2 {
            border-bottom-right-radius: 5px;
            border-top-right-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <form class="box" autocomplete="off">
            <div class="faixa"></div>
            <div class="container-fluid">                
                <div class="row">
                    <div class="col-12">
                        @{
                            if (TempData["token_invalido"] != null)
                            {
                                <div class="row" style="margin-top:25px;">
                                    <div class="col-12">
                                        <div class="alert alert-danger" role="alert">@TempData["token_invalido"].ToString()</div>
                                    </div>
                                </div>
                            }
                        }
                    </div>                    
                </div>
            </div>
        </form>
    </div>
</body>
</html>
