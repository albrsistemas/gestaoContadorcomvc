@model gestaoContadorcomvc.Models.Autenticacao.ForgotPassword

@{
    ViewData["Title"] = "Redefinir Senha";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            margin: 0px;
            background-image: url('/Imagens/background.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
        }

        .container {
            width: 100vw;
            height: 100vh;
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center
        }

        .box {
            width: 500px;
            height: auto;
            background: #fff;
            text-align: center;
            padding-bottom: 5px;
        }

            .box input {
                text-align: center;
            }

                .box input:hover {
                    color: #495057;
                    background-color: #fff;
                    border-color: #80bdff;
                    outline: 0;
                    box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
                }

        .faixa {
            width: 100%;
            height: 35px;
            border-bottom: 3px solid #ff4400;
            background-color: #060040;
        }

        .login {
            text-align: center;
            font-family: sans-serif;
            font-weight: bold;
            font-size: 32px;
            margin-top: 35px;
            margin-bottom: 40px;
        }

        .botao {
            width: 100%;
            margin-top: 10px;
        }

        .criarConta {
            margin-top: 10px;
        }

        .radio-toolbar input[type="radio"] {
            display: none;
        }

        .radio-toolbar label {
            float: left;
            background-color: #17a2b8;
            color: white;
            width: 135px;
            height: 38px;
            line-height: 38px;
            font-family: sans-serif;
            cursor: pointer;
            user-select: none;
        }

        .radio-toolbar input[type="radio"]:checked + label {
            background-color: #138496;
        }

        #label1 {
            border-bottom-left-radius: 5px;
            border-top-left-radius: 5px;
        }

        #label2 {
            border-bottom-right-radius: 5px;
            border-top-right-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <form class="box" autocomplete="off" asp-controller="ForgotPassword" asp-action="redefinir_senha">
            <div class="faixa"></div>
            <div class="container-fluid">
                <h1 class="login">Redefir Senha</h1>
                <div class="row">
                    <div class="col-12">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" autofocus asp-for="email" id="email" placeholder="Digite seu e-mail" aria-label="Recipient's username" aria-describedby="button-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-outline-info" type="submit" id="button-addon2">Enviar</button>
                            </div>
                        </div>
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                </div>

                @{
                    if (TempData["error"] != null)
                    {
                        <div class="row">
                            <div class="col-12">
                                <span class="text-danger">@TempData["error"].ToString()</span>
                            </div>
                        </div>
                    }

                    if (TempData["sucesso"] != null)
                    {
                        <div class="row">
                            <div class="col-12">
                                <div class="alert alert-success" role="alert">@TempData["sucesso"].ToString()</div>
                            </div>
                        </div>
                    }

                    if (TempData["falha"] != null)
                    {
                        <div class="row">
                            <div class="col-12">
                                <div class="alert alert-danger" role="alert">@TempData["falha"].ToString()</div>
                            </div>
                        </div>
                    }

                }
            </div>
        </form>
    </div>
</body>
</html>
