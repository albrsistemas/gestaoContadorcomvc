<!--Cabeçalho-->
<div class="list-header">
    <div class="line-list titulo">
        <div class="col-list-left">
            <input class="check-list-input" type="checkbox" id="cp_todas">
            <label class="check-list-label" for="cp_todas"></label>
        </div>
        <div class="col-list-body">
            <div class="row">
                <div class="col-12 col-md-3"><strong>Nome</strong></div>
                <div class="col-12 col-md-2"><strong>Tipo</strong></div>
                <div class="col-12 col-md-2"><strong>Recorrência</strong></div>
                <div class="col-12 col-md-2" style="text-align:center"><strong>Data Inicial</strong></div>
                <div class="col-12 col-md-2" style="text-align:center"><strong>Data Final</strong></div>
                <div class="col-12 col-md-1" style="text-align:right"><strong>Valor</strong></div>
            </div>
        </div>
        <div class="col-list-rigth" style="padding-right: 10px;">
            <span><strong>Ações</strong></span>
        </div>
    </div>
</div>

@{
    foreach (var item in Model.contas)
    {
        <div class="line-list">
            <div class="col-list-left">
                <input class="check-list-input" type="checkbox" id="cp_todas">
                <label class="check-list-label" for="cp_todas"></label>
            </div>
            <div class="col-list-body">
                <div class="row">
                    <div class="col-12 line_list_title_mobile"><strong>Nome: </strong>@item.cf_nome</div>
                    <div class="col-12 line_list_title_mobile"><strong>Tipo: </strong>@item.cf_tipo</div>
                    <div class="col-12 line_list_title_mobile"><strong>Recorrência: </strong>@item.cf_recorrencia</div>
                    <div class="col-12 line_list_title_mobile"><strong>Data Inicial: </strong>@item.cf_data_inicial.ToShortDateString()</div>
                    @{
                        if (item.cf_data_final.ToShortDateString() != "01/01/0001")
                        {
                            <div class="col-12 line_list_title_mobile"><strong>Data Final: </strong>@item.cf_data_final.ToShortDateString()</div>
                        }
                        else
                        {
                            <div class="col-12 line_list_title_mobile"><strong>Data Final: </strong></div>
                        }
                    }                    
                    <div class="col-12 line_list_title_mobile"><strong>Valor: </strong>@item.cf_valor_operacao.ToString("N")</div>

                    <div class="col-3 line_list_title_full">@item.cf_nome</div>
                    <div class="col-2 line_list_title_full">@item.cf_tipo</div>
                    <div class="col-2 line_list_title_full">@item.cf_recorrencia</div>
                    <div class="col-2 line_list_title_full" style="text-align:center">@item.cf_data_inicial.ToShortDateString()</div>
                    @{
                        if (item.cf_data_final.ToShortDateString() != "01/01/0001")
                        {
                            <div class="col-2 line_list_title_full" style="text-align:center">@item.cf_data_final.ToShortDateString()</div>
                        }
                        else
                        {
                            <div class="col-2 line_list_title_full"></div>
                        }
                    }
                    <div class="col-1 line_list_title_full" style="text-align:right">@item.cf_valor_operacao.ToString("N")</div>
                </div>
            </div>
            <div class="col-list-rigth" style="padding-right: 10px;">
                @{
                    if (Model.user.Role == "adm" || Model.user._permissoes.contasFPEdit)
                    {
                        <a class="edit" data-id="@item.cf_id">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5L13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175l-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                            </svg>
                        </a>
                    }
                    if (Model.user.Role == "adm" || Model.user._permissoes.contasFDelete)
                    {
                        <a class="delete" data-id="@item.cf_id">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                            </svg>
                        </a>
                    }
                }
            </div>
        </div>
    }
}