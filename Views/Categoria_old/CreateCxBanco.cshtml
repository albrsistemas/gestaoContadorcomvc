@model gestaoContadorcomvc.Models.ViewModel.Vm_categoria_old
@{
    Layout = null;
}
<div class="container">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Criar Categoria</h4>
            </div>
            <form asp-controller="Categoria" asp-action="CreateCxBanco">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <p>Cadastro de nova categoria de: <strong>Conta Bancária</strong></p>
                        </div>
                    </div>
                    <hr class="hrLine" />
                    @{
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label class="control-label">Lista de Bancos Nacionais</label>
                                    <select asp-items="@ViewBag.bancos" value="@TempData["contaPadrao_codigoBanco"]" name="contaPadrao_codigoBanco" class="form-control"></select>
                                    <span class="text-danger"></span>
                                </div>

                                @*<div class="form-group">
                                    <label asp-for="contaPadrao_codigoBanco" class="control-label"></label>
                                    <input asp-for="contaPadrao_codigoBanco" class="form-control" />
                                    <span asp-validation-for="contaPadrao_codigoBanco" class="text-danger"></span>
                                </div>*@
                            </div>
                        </div>                                                
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-info">Gravar</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
