@model gestaoContadorcomvc.Models.ViewModel.Vm_usuario
@{
    Layout = null;
}
<div class="container">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Alteração de acesso de usuário</h4>
            </div>
            <form asp-controller="Usuario" asp-action="EditPassword">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <p>Informe o novo usuário e senha de: <strong>@Model.usuario_nome</strong></p>
                        </div>
                    </div>
                    <hr class="hrLine" />
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="usuario_user" class="control-label"></label>
                                <input asp-for="usuario_user" class="form-control" />
                                <span asp-validation-for="usuario_user" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="usuario_senha" class="control-label"></label>
                                <input type="password" asp-for="usuario_senha" class="form-control" />
                                <span asp-validation-for="usuario_senha" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="confirmaSenha" class="control-label"></label>
                                <input asp-for="confirmaSenha" type="password" id="confirmeSenhaUsuario" class="form-control" />
                                <span asp-validation-for="confirmaSenha" id="spanConfirmeSenhaUsuario" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>

                    <input type="hidden" value="@Model.usuario_id" name="id" />
                    <button type="submit" class="btn btn-info">Gravar</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>