@model gestaoContadorcomvc.Models.ViewModel.Vm_operacao
@{
    Layout = null;
}
<div class="container">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Confirmação Exclusão</h4>
            </div>
            <form asp-controller="Compra" asp-action="Delete">
                <div class="modal-body">
                    <p>Confirme a exclusão da compra realizada em @Model.operacao.op_data.ToShortDateString() de @Model.participante.op_part_nome no valor de @Model.totais.op_totais_total_op.ToString("N") ?</p>                    

                    <input type="hidden" name="cf_id" value="@Model.operacao.op_id" />

                </div>                
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">Excluir</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>